datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Organization {
  id      String   @id @default(cuid())
  name    String
  members Member[]
}

model Member {
  id        String       @id @default(cuid())
  email     String       @unique
  name      String
  org       Organization @relation(fields: [orgId], references: [id])
  orgId     String
  createdAt DateTime     @default(now())
}
